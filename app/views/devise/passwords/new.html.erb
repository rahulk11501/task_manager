<h2 class="text-2xl font-bold mb-4 text-center">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "max-w-md mx-auto bg-white p-6 rounded-lg shadow" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring focus:ring-blue-200" %>
  </div>

  <div class="flex justify-between items-center">
    <%= f.submit "Send reset instructions", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    <%= link_to "Back", new_session_path(resource_name), class: "text-sm text-blue-500 hover:underline" %>
  </div>
<% end %>
