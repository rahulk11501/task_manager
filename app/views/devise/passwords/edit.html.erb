<h2 class="text-2xl font-bold mb-4 text-center">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "max-w-md mx-auto bg-white p-6 rounded-lg shadow" }) do |f| %>
  <%= hidden_field_tag :reset_password_token, params[:reset_password_token] %>

  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring focus:ring-blue-200" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring focus:ring-blue-200" %>
  </div>

  <div class="flex justify-between items-center">
    <%= f.submit "Change my password", class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
    <%= link_to "Back", new_session_path(resource_name), class: "text-sm text-blue-500 hover:underline" %>
  </div>
<% end %>
