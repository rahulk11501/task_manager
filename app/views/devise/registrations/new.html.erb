<div class="max-w-md mx-auto mt-10 bg-white shadow-md rounded px-8 pt-6 pb-8">
  <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.email_field :email, autofocus: true, class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div class="mb-6">
      <%= f.submit "Sign up", class: "w-full bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
    </div>
  <% end %>

  <div class="text-center text-sm text-gray-600">
    <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "hover:underline" %>
  </div>
</div>
