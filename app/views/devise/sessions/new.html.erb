<div class="max-w-md mx-auto mt-10 bg-white shadow-md rounded px-8 pt-6 pb-8">
  <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="mb-4 flex items-center">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-gray-700" %>
      </div>
    <% end -%>

    <div class="mb-6">
      <%= f.submit "Log in", class: "w-full bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>
  <% end %>

  <div class="text-center text-sm text-gray-600">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "hover:underline" %><br>
    <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "hover:underline" %>
  </div>
</div>
