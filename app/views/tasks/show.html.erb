<div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg p-6">
  <h1 class="text-2xl font-bold mb-4 text-gray-800"><%= @task.title %></h1>

  <p class="mb-4 text-gray-700">
    <strong>Description:</strong><br>
    <%= @task.description.presence || "No description provided." %>
  </p>

  <p class="mb-4">
    <span class="inline-block px-3 py-1 rounded-full text-sm font-semibold 
      <%= @task.completed ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
      <%= @task.completed ? 'Completed ✅' : 'Incomplete ❌' %>
    </span>
  </p>

  <div class="mt-6 flex flex-wrap gap-4">
    <%= link_to 'Edit', edit_task_path(@task), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
    <%= link_to 'Toggle Status', toggle_complete_task_path(@task), method: :patch, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded" %>
    <%= link_to 'Back', tasks_path, class: "bg-gray-400 hover:bg-gray-500 text-white px-4 py-2 rounded" %>
    <%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' }, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded" %>
  </div>
</div>
