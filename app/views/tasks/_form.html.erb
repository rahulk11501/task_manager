<%= form_with(model: task, local: true, class: "space-y-4") do |form| %>
  <div>
    <%= form.label :title, class: "block font-semibold" %>
    <%= form.text_field :title, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= form.label :description, class: "block font-semibold" %>
    <%= form.text_area :description, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :due_date, "Due Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.date_field :due_date,
          class: "block w-full rounded-md border border-gray-300 bg-white py-2 px-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </div>

  <div class="flex items-center">
    <div class="mb-4">
      <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
      
      <%= form.select :status, Task.statuses.keys.map { |s| [s.titleize, s] }, {}, 
          class: "block w-full rounded-md border border-gray-300 bg-white py-2 px-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= form.submit class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
