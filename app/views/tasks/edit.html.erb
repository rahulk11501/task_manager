<div class="container mx-auto px-4">
  <% content_for :title, "Editing Task" %>

  <div class="max-w-2xl mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Task</h1>

    <%= render "form", task: @task %>

    <div class="mt-6 flex gap-4">
      <%= link_to "Show this task", @task,
        class: "inline-block bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded" %>

      <%= link_to "Back to tasks", tasks_path,
        class: "inline-block bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded" %>
    </div>
  </div>
</div>