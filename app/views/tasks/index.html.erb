<h1 class="text-3xl font-bold mb-6">Your Tasks</h1>

<table class="w-full table-auto shadow border rounded">
  <thead class="bg-gray-200 text-left">
    <tr>
      <th class="p-2">Title</th>
      <th class="p-2">Completed</th>
      <th class="p-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr class="border-t bg-white hover:bg-gray-50">
        <td class="p-2"><%= task.title %></td>
        <td class="p-2"><%= task.completed ? "✅" : "❌" %></td>
        <td class="p-2 space-x-2">
          <%= link_to "Show", task, class: "text-blue-500 hover:underline" %>
          <%= link_to "Edit", edit_task_path(task), class: "text-green-500 hover:underline" %>
          <%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
          <%= link_to (task.completed ? "Mark Incomplete" : "Mark Complete"), toggle_complete_task_path(task), method: :patch, class: "text-indigo-500 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Task", new_task_path, class: "mt-4 inline-block bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded" %>
